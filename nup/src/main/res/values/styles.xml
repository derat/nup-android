<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
  </style>

  <style name="Raised">
    <item name="android:background">?android:attr/colorBackground</item>
    <item name="android:elevation">@dimen/height1</item>
  </style>

  <style name="PlayingSongText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">@dimen/playing_song_text</item>
  </style>
  <style name="PlayingSongArtist" parent="PlayingSongText">
    <item name="android:textStyle">bold</item>
  </style>
  <style name="PlayingSongTitle" parent="PlayingSongText">
    <item name="android:textStyle">italic</item>
  </style>
  <style name="PlayingSongAlbum" parent="PlayingSongText" />
  <style name="PlayingSongTime" parent="PlayingSongText">
    <item name="android:alpha">0.6</item>
  </style>
  <style name="PlayingSongDownload" parent="PlayingSongText">
    <item name="android:alpha">0.6</item>
  </style>

  <style name="Button" parent="Widget.MaterialComponents.Button">
     <item name="android:layout_width">fill_parent</item>
     <item name="android:layout_height">wrap_content</item>
     <item name="android:layout_weight">1</item>
  </style>
  <style name="IconButton" parent="Button">
    <item name="iconPadding">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:insetLeft">0dp</item>
    <item name="android:insetRight">0dp</item>
    <item name="android:padding">16dp</item>
    <item name="android:gravity">center</item>
    <item name="iconGravity">textStart</item>
    <item name="iconTint">@color/icons</item>
  </style>

  <style name="SongListArtist">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">3</item>
    <item name="android:paddingRight">4dp</item>
    <item name="android:textSize">@dimen/song_list_text</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>
  <style name="SongListTitle">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/song_list_text</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>
  <style name="SongListPercent">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:paddingLeft">4dp</item>
    <item name="android:textSize">@dimen/song_list_percent</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
  </style>

  <style name="BrowseRowText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">@dimen/vertical_padding</item>
    <item name="android:paddingBottom">@dimen/vertical_padding</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">@dimen/song_list_text</item>
    <item name="android:singleLine">true</item>
  </style>
  <style name="BrowseRowExtra" parent="BrowseRowText">
    <item name="android:alpha">0.5</item>
  </style>

  <style name="SongDetailsLabel">
    <item name="android:paddingRight">4dp</item>
    <item name="android:gravity">right</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">@dimen/song_details_text</item>
    <item name="android:alpha">0.6</item>
  </style>
  <style name="SongDetailsValue">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">@dimen/song_details_text</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style
    name="SearchTextLayout"
    parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
  >
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style
    name="SearchAutocompleteLayout"
    parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
  >
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="SearchTextField">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:singleLine">true</item>
    <item name="android:inputType">textNoSuggestions</item>
  </style>
  <style name="SearchCheckbox">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textSize">@dimen/search_checkbox_text</item>
  </style>

  <style name="Progress">
    <item name="android:alpha">0.15</item>
    <item name="android:indeterminateTint">?android:attr/textColorPrimary</item>
  </style>

  <style name="AppPreference">
    <item name="android:layout">@layout/preference_material</item>
  </style>
  <style name="AppPreference.DialogPreference">
    <item name="positiveButtonText">@android:string/ok</item>
    <item name="negativeButtonText">@android:string/cancel</item>
  </style>
</resources>
