<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
  </style>
  <style name="PlayingSongText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:textSize">15dp</item>
  </style>
  <style name="Button" parent="Widget.MaterialComponents.Button">
     <item name="android:layout_width">fill_parent</item>
     <item name="android:layout_height">wrap_content</item>
     <item name="android:layout_weight">1</item>
  </style>
  <style name="IconButton" parent="Button">
    <item name="iconPadding">0dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="android:insetLeft">0dp</item>
    <item name="android:insetRight">0dp</item>
    <item name="android:padding">16dp</item>
    <item name="android:gravity">center</item>
  </style>
  <style name="SongListArtist">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">3</item>
    <item name="android:paddingRight">@dimen/textgrid</item>
    <item name="android:textSize">@dimen/material_text_menu</item>
    <item name="android:singleLine">true</item>
  </style>
  <style name="SongListTitle">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/material_text_menu</item>
    <item name="android:singleLine">true</item>
  </style>
  <style name="BrowseRowText">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">@dimen/grid1</item>
    <item name="android:paddingBottom">@dimen/grid1</item>
    <item name="android:textSize">@dimen/material_text_menu</item>
    <item name="android:singleLine">true</item>
  </style>
  <style name="SongDetailsLabel">
    <item name="android:paddingRight">@dimen/grid1</item>
    <item name="android:gravity">right</item>
    <item name="android:textSize">@dimen/material_text_body1</item>
    <item name="android:textColor">@color/secondary_text</item>
  </style>
  <style name="SongDetailsValue">
    <item name="android:textSize">@dimen/material_text_body1</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/primary_text</item>
  </style>
  <style name="SearchTextField">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:singleLine">true</item>
    <item name="android:inputType">textNoSuggestions</item>
  </style>
  <style name="SearchCheckbox">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textSize">@dimen/material_text_body1</item>
  </style>
  <style name="AppPreference">
    <item name="android:layout">@layout/preference_material</item>
  </style>
  <style name="AppPreference.DialogPreference">
    <item name="positiveButtonText">@android:string/ok</item>
    <item name="negativeButtonText">@android:string/cancel</item>
  </style>
</resources>
