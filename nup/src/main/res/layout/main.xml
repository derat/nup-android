<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
>
  <FrameLayout
    style="@style/Raised"
    android:id="@+id/current_song_frame"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/vertical_padding"
  >
    <ImageView
      android:id="@+id/cover_image"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:adjustViewBounds="true"
      android:scaleType="centerCrop"
    />
    <TextView
      android:id="@+id/download_status_label"
      style="@style/PlayingSongDownload"
      android:layout_gravity="top|right"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingRight="@dimen/horizontal_padding"
      android:paddingTop="@dimen/vertical_padding"
    />
    <LinearLayout
      android:orientation="vertical"
      android:layout_gravity="bottom|left"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:paddingLeft="@dimen/horizontal_padding"
      android:paddingRight="@dimen/horizontal_padding"
      android:paddingBottom="@dimen/vertical_padding"
      android:clipChildren="false"
      android:clipToPadding="false"
    >
      <TextView android:id="@+id/artist_label" style="@style/PlayingSongArtist" />
      <TextView android:id="@+id/title_label" style="@style/PlayingSongTitle" />
      <TextView android:id="@+id/album_label" style="@style/PlayingSongAlbum" />
    </LinearLayout>
  </FrameLayout>

  <LinearLayout
    style="@style/Raised"
    android:id="@+id/progress_row"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/horizontal_padding"
    android:paddingRight="@dimen/horizontal_padding"
    android:paddingTop="@dimen/vertical_padding"
    android:paddingBottom="@dimen/vertical_padding"
    android:clipChildren="false"
  >
    <TextView android:id="@+id/position_label" style="@style/SeekLabel" />
    <SeekBar
      android:id="@+id/seekbar"
      android:layout_width="0px"
      android:layout_height="wrap_content"
      android:layout_weight="1"
    />
    <TextView
      android:id="@+id/duration_label"
      style="@style/SeekLabel"
      android:gravity="right"
    />
  </LinearLayout>

  <LinearLayout
    style="@style/Raised"
    android:id="@+id/playback_buttons_row"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/horizontal_padding"
    android:paddingRight="@dimen/horizontal_padding"
    android:paddingTop="@dimen/vertical_padding"
    android:paddingBottom="@dimen/vertical_padding"
  >
    <Button
      android:id="@+id/prev_button"
      style="@style/IconButton"
      app:icon="@drawable/skip_previous"
      android:onClick="onPrevButtonClicked"
    />
    <Space android:layout_width="@dimen/button_spacing" android:layout_height="fill_parent" />
    <Button
      android:id="@+id/pause_button"
      style="@style/IconButton"
      app:icon="@drawable/play"
      android:onClick="onPauseButtonClicked"
    />
    <Space android:layout_width="@dimen/button_spacing" android:layout_height="fill_parent" />
    <Button
      android:id="@+id/next_button"
      style="@style/IconButton"
      app:icon="@drawable/skip_next"
      android:onClick="onNextButtonClicked"
    />
  </LinearLayout>

  <LinearLayout
    style="@style/Raised"
    android:id="@+id/playlist_heading"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/horizontal_padding"
    android:paddingRight="@dimen/horizontal_padding"
  >
    <TextView
      style="@style/SongListArtist"
      android:text="@string/artist"
      android:textStyle="bold"
    />
    <TextView
      style="@style/SongListTitle"
      android:layout_weight="2"
      android:text="@string/title"
      android:textStyle="bold"
    />
  </LinearLayout>

  <ListView
    android:id="@+id/playlist"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:divider="@android:color/transparent"
  />
</LinearLayout>
