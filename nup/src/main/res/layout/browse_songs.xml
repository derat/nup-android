<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
>
  <!-- TODO: This is duplicated in search_results.xml. Move it to a fragment? -->
  <LinearLayout
    style="@style/Raised"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/horiz_space"
    android:paddingRight="@dimen/horiz_space"
    android:paddingTop="@dimen/vert_space"
    android:paddingBottom="@dimen/vert_space"
  >
    <Button
      android:id="@+id/append_button"
      style="@style/Button"
      android:text="@string/append"
      android:onClick="onAppendButtonClicked"
    />
    <Space android:layout_width="@dimen/horiz_space" android:layout_height="fill_parent" />
    <Button
      android:id="@+id/insert_button"
      style="@style/Button"
      android:text="@string/insert"
      android:onClick="onInsertButtonClicked"
    />
    <Space android:layout_width="@dimen/horiz_space" android:layout_height="fill_parent" />
    <Button
      android:id="@+id/replace_button"
      style="@style/Button"
      android:text="@string/replace"
      android:onClick="onReplaceButtonClicked"
    />
  </LinearLayout>

  <ListView
    android:id="@+id/songs"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
  />
</LinearLayout>
