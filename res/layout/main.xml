<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="90dp"
      android:padding="5dp"
      >
    <ImageView
        android:id="@+id/album_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:paddingRight="5dp"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
      <TextView
          android:id="@+id/artist_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:textStyle="bold"
          android:textSize="14dp"
          />
      <TextView
          android:id="@+id/title_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:textStyle="italic"
          android:textSize="14dp"
          />
      <TextView
          android:id="@+id/album_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:singleLine="true"
          android:textSize="14dp"
          />
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          >
        <TextView
            android:id="@+id/time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text=""
            android:textSize="14dp"
            android:textColor="#888"
            />
        <TextView
            android:id="@+id/download_status_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="right"
            android:text=""
            android:textSize="14dp"
            android:textColor="#555"
            />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      >
    <Button
        android:id="@+id/pause_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/pause"
        android:onClick="onPauseButtonClicked"
        />
    <Button
        android:id="@+id/prev_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/prev"
        android:onClick="onPrevButtonClicked"
        />
    <Button
        android:id="@+id/next_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/next"
        android:onClick="onNextButtonClicked"
        />
    <Button
        android:id="@+id/browse_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/browse"
        android:onClick="onBrowseButtonClicked"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/playlist_heading"
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingRight="5dp"
        android:singleLine="true"
        android:text="@string/artist"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:singleLine="true"
        android:text="@string/title"
        android:textStyle="bold"
        />
  </LinearLayout>

  <ListView
      android:id="@+id/playlist"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:divider="@android:color/transparent"
      />
</LinearLayout>
