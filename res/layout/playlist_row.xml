<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/grid2"
    android:paddingRight="@dimen/grid2"
    >
  <TextView
      android:id="@+id/artist"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="3"
      android:paddingRight="@dimen/textgrid"
      android:textSize="@dimen/material_text_menu"
      android:singleLine="true"
      />
  <RelativeLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      >
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/percent"
        android:textSize="@dimen/material_text_menu"
        android:singleLine="true"
        />
    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingTop="2dp"
        android:paddingLeft="@dimen/textgrid"
        android:textSize="@dimen/material_text_caption"
        android:singleLine="true"
        />
  </RelativeLayout>
</LinearLayout>
